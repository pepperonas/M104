<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_root_battery"
    style="@style/card_style_default"
    app:cardCornerRadius="@dimen/card_corner_radius_default"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/iv_root_battery_app_icon"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_launcher"
            android:layout_alignParentTop="false"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentEnd="false"
            android:layout_marginTop="16dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="16dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_root_battery_app_icon"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            >

            <TextView
                android:id="@+id/tv_card_root_battery_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large Text"
                android:gravity="center_vertical"
                style="@style/text_card_title_default"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_card_root_battery_app_name"
                android:layout_marginTop="12dp"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:id="@+id/iv_root_battery_l"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_launcher"
                        />

                    <TextView
                        android:id="@+id/tv_card_root_battery_l"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2.87 GB"
                        style="@style/text_card_title_default"
                        android:textAlignment="viewEnd"
                        android:layout_marginRight="8dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:id="@+id/iv_root_battery_c"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_launcher"
                        />

                    <TextView
                        android:id="@+id/tv_card_root_battery_c"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/text_card_title_default"
                        android:text="4.763 kB"
                        android:textAlignment="viewEnd"
                        android:layout_marginRight="8dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:id="@+id/iv_root_battery_r"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_launcher"
                        />

                    <TextView
                        android:id="@+id/tv_card_root_battery_r"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2.81 GB"
                        android:textStyle="italic"
                        style="@style/text_card_title_default"
                        android:textAlignment="viewEnd"
                        android:layout_marginRight="8dp"
                        />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>