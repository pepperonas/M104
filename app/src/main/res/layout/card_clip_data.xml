<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clip_data_card_container"
    style="@style/card_style_clip_data"
    app:cardCornerRadius="@dimen/card_corner_radius_clip_data"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_clip_data_card_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_launcher"
            />

        <TextView
            android:id="@+id/tv_card_clip_data_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/empty"
            android:gravity="left|center"
            android:layout_marginLeft="16dp"
            style="@style/text_card_clip_data_content"
            android:layout_weight="1"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="0"
            >

            <TextView
                android:id="@+id/tv_clip_data_created_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small Text"
                style="@style/text_card_clip_data_created"
                android:layout_weight="0"
                />

            <TextView
                android:id="@+id/tv_clip_data_created_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small Text"
                style="@style/text_card_clip_data_created"
                android:layout_weight="0"
                />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>