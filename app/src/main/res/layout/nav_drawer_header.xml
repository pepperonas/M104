<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="180dp"
    android:background="@color/colorPrimaryNavDrawerDarker"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/drawer_bg3"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/nav_view_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="14sp"
        android:textColor="@color/navDrawerHeader"
        android:textStyle="bold"
        android:gravity="start"
        android:paddingBottom="4dp"
        android:layout_above="@+id/nav_view_header_subtitle"
        android:layout_alignLeft="@+id/profile"
        android:layout_alignStart="@+id/profile"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/nav_view_header_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:gravity="start"
        android:layout_marginBottom="8dp"
        android:textSize="14sp"
        android:textColor="@color/navDrawerSubHeader"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/nav_view_header_title"
        android:layout_alignStart="@+id/nav_view_header_title" />

</RelativeLayout>